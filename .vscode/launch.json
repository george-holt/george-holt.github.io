{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "firefox",
      "request": "launch",
      "name": "Firefox index.html",
      "file": "${workspaceFolder}/dist/index.html"
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "Chrome - index.html",
      "file": "${workspaceFolder}/dist/index.html",
      "runtimeArgs": [
        "--auto-open-devtools-for-tabs",
        "--disable-features=VizDisplayCompositor"
      ],
      "userDataDir": "${workspaceFolder}/.vscode/chrome-profile"
    }
  ]
}
